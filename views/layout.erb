<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=Edge">
	<title>imaginaryProducts</title>
	<link href="/main.css" rel="stylesheet" type="text/css" />
  <link rel="icon" type="image/png" href="/favicon.png">  
  <script src='/javascript/jquery-1.5.2.min.js' type='text/javascript' charset='utf-8'></script>
  <script src='/javascript/imaginaryProducts.js' type='text/javascript' charset='utf-8'></script>
  <script src='/javascript/gameOfLife.js' type='text/javascript' charset='utf-8'></script>
	<% yield_content :head %>
  <!--[if !IE 7]>
  	<style type="text/css">
  		#wrap {display:table;height:100%}
  	</style>
  <![endif]-->
</head>

<body style="background-color: #EEE;">

  <script type="text/javascript">
    $(document).ready(function() {
      setPageWidth();
      gameOfLife();
    });
    window.onresize = function() {
      setPageWidth();
      gameOfLife();
    }
  </script>
  
  <canvas id="game-of-life" width="100", height="100"></canvas>
    
  <div id="content">
    <div id="navigation-wrapper">
    	<div id="navigation">
       	<a href="/"><img src="/company/imaginaryProducts-name.png" class="logo"></a>
      	<% yield_content :navigation %>
    	</div>
    </div>
    <div id="page-wrapper">
      <div id="page">
    	  <% yield_content :page %>
      </div>
    </div>
  </div>

  <div id="footer-wrapper">
    <div id="footer">
      <ul>
    	  <% yield_content :footer_list %>
        <li>
          <a href="mailto:troy@imaginaryproducts.com">
            <img src="/company/email.png" alt="email imaginaryProducts"/>
          </a>
        </li>
        <li>
          <a href="http://www.twitter.com/imaginaryprod">
            <img src="/company/twitter.png" alt="Follow imaginaryprod on Twitter"/>
          </a>
        </li>
      </ul>
    </div>
  </div>

</body>

</html>