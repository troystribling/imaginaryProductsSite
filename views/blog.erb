<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<title><%= Blog.title %></title>
  <script src='/jquery-1.5.2.min.js' type='text/javascript' charset='utf-8'></script>
  <script src='/imaginaryProducts.js' type='text/javascript' charset='utf-8'></script>
	<link href="/main.css" rel="stylesheet" type="text/css" />
	<link href="/feed" rel="alternate" title="Primary Feed" type="application/atom+xml" />
  <link rel="icon" type="image/png" href="/favicon.png">  
</head>

<body>
  
  <script type="text/javascript">
    $(document).ready(function() {
      setPageSize();
    });
  </script>
  
  <div id="navigation-wrapper">
  	<div id="navigation">
     	<a href="/"><img src="/imaginaryProducts-name.png" class="logo"></a>
      <ul>
        <li><a href="/products">products</a></li>
        <li><a href="/projects">projects</a></li>
        <li class="selected">blog</li>
      </ul>
  	</div>
  </div>

  <div id="page-wrapper">
    <div id="page" style="padding-top: 30px;">
      <div id="post-navigation">
      	<% if posts.empty? and not admin?%>
      		<p><a href="/blog/auth">Log in</a></p>
      	<% end %>
      	<% if admin? %>
      		<p><a href="/blog/posts/new">New Post</a><p>
      	<% end %>
    		<p><a href="/blog/past">Archive</a></p>
        <ul>
          <li class="rss">
            <img src="/blog-rss.png" alt="rss imaginaryProducts"/>
          </li>
          <li class="twitter">
            <a href="http://www.twitter.com/imaginaryprod">
              <img src="/blog-twitter.png" alt="Follow imaginaryprod on Twitter"/>
            </a>
          </li>
          <li class="email">
            <img src="/blog-email.png" alt="email imaginaryProducts"/>
          </li>
        </ul>
      </div>
    	<% if not posts.empty? %>
    	  <% posts.each do |post| %>
      	  <div class="post-item">
            <div class="date">
        	    <%= post[:created_at].strftime("%b %d, %Y") %>
            </div>
          	<div class="post">
          		<div class="title">
          		  <a href="<%= post.url %>"><%= post[:title] %></a>
          		</div>
          		<div class="entry">
          			<%= post.summary_html %>
          		</div>
        			<% if post.more? %>
        				<p><a class="more" href="<%= post.url %>">read more &raquo;</a></p>
        			<% end %>
        	  </div>
        	</div>
      	<%end%>
      <% end %>
    </div>
  </div>

  <div id="footer-wrapper">
    <div id="footer">
      <ul>
        <li class="rss">
          <img src="/rss.png" alt="rss imaginaryProducts"/>
        </li>
        <li class="email">
          <img src="/email.png" alt="email imaginaryProducts"/>
        </li>
        <li class="twitter">
          <a href="http://www.twitter.com/imaginaryprod">
            <img src="/twitter.png" alt="Follow imaginaryprod on Twitter"/>
          </a>
        </li>
      </ul>
    </div>
  </div>

  <% if Blog.disqus_shortname %>
  	<script type="text/javascript">
  	//<[CDATA[
  	(function() {
  		var links = document.getElementsByTagName('a');
  		var query = '?';
  		for(var i = 0; i < links.length; i++) {
  			if(links[i].href.indexOf('#disqus_thread') >= 0) {
  				query += 'url' + i + '=' + encodeURIComponent(links[i].href) + '&';
  			}
  		}
  		document.write('<script type="text/javascript" src="http://disqus.com/forums/<%= Blog.disqus_shortname %>/get_num_replies.js' + query + '"></' + 'script>');
  		})();
  	//]]>
  	</script>
  <% end %>
  
</body>
</html>