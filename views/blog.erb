<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<title><%= Blog.title %></title>
	<link href="/main.css" rel="stylesheet" type="text/css" />
	<link href="/feed" rel="alternate" title="Primary Feed" type="application/atom+xml" />
</head>

<body>
  
  <div id="navigation-wrapper">
  	<div id="navigation">
     	<a href="/"><img src="/imaginaryProducts-name.png" class="logo"></a>
      <ul>
        <li><a href="/products"><img src="/products.png"></a></li>
        <li><img src="/blog-selected.png"></li>
      </ul>
  	</div>
  </div>

  <div id="page-wrapper">
    <div id="page">
      <div id="post-navigation">
      	<% if posts.empty? and not admin?%>
      		<p><a href="/blog/auth">Log in</a></p>
      	<% end %>
      	<% if admin? %>
      		<p><a href="/blog/posts/new">New post</a><p>
      	<% end %>
    		<a href="/blog/past">Archive</a>
      </div>
    	<% if not posts.empty? %>
    	  <% posts.each do |post| %>
      	  <div class="post-item">
            <div class="post-date">
        	    <%= post[:created_at].strftime("%B %d, %Y") %>
            </div>
          	<div class="post">
          		<div class="title">
          		  <a href="<%= post.url %>"><%= post[:title] %></a>
          		</div>
          		<div class="entry">
          			<%= post.summary_html %>
          			<% if post.more? %>
          				<a href="<%= post.url %>">more &raquo;</a>
          			<% end %>
          		</div>
        	  </div>
        	</div>
      	<%end%>
    	<% end %>
    </div>
  </div>

  <div id="footer">
  </div>

  <% if Blog.disqus_shortname %>
  	<script type="text/javascript">
  	//<[CDATA[
  	(function() {
  		var links = document.getElementsByTagName('a');
  		var query = '?';
  		for(var i = 0; i < links.length; i++) {
  			if(links[i].href.indexOf('#disqus_thread') >= 0) {
  				query += 'url' + i + '=' + encodeURIComponent(links[i].href) + '&';
  			}
  		}
  		document.write('<script type="text/javascript" src="http://disqus.com/forums/<%= Blog.disqus_shortname %>/get_num_replies.js' + query + '"></' + 'script>');
  		})();
  	//]]>
  	</script>
  <% end %>
  
</body>
</html>