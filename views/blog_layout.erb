<!DOCTYPE html>
<html>

<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<title><%= Blog.title %></title>
  <script src='/javascript/jquery-1.5.2.min.js' type='text/javascript' charset='utf-8'></script>
  <script src='/javascript/imaginaryProducts.js' type='text/javascript' charset='utf-8'></script>
	<link href="/main.css" rel="stylesheet" type="text/css" />
	<link href="/feed" rel="alternate" title="Primary Feed" type="application/atom+xml" />
  <link rel="icon" type="image/png" href="/favicon.png">  
</head>

<body style="background-color: #EEE;">
  
  <script type="text/javascript">
    $(document).ready(function() {
      showVignette('blog');
      setPageWidth();
    });
    window.onresize = function() {
      setPageWidth();
    }
    var _gaq = _gaq || [];
     _gaq.push(['_setAccount', 'UA-25544843-1']);
     _gaq.push(['_trackPageview']);

     (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
     })();    
  </script>
      
  <div id="content">

    <div id="navigation-wrapper">
    	<div id="navigation">
       	<a href="/"><img src="/company/imaginaryProducts-name.png" class="logo"></a>
      	<% yield_content :navigation %>
    	</div>
    </div>

    <div id="page-wrapper">
      <div id="page" style="padding-top: 30px;">
    	  <% yield_content :page %>
      </div>
    </div>
  </div>

  <div id="footer-wrapper">
    <div id="footer">
      <ul>
        <li class="rss">
          <a href="/blog/rss">
            <img src="/company/rss.png" alt="rss imaginaryProducts"/>
          </a>
        </li>
        <li class="email">
          <a href="mailto:troy@imaginaryproducts.com">
            <img src="/company/email.png" alt="email imaginaryProducts"/>
          </a>
        </li>
        <li class="twitter">
          <a href="http://www.twitter.com/imaginaryprod">
            <img src="/company/twitter.png" alt="Follow imaginaryprod on Twitter"/>
          </a>
        </li>
      </ul>
    </div>
  </div>
  
</body>
</html>